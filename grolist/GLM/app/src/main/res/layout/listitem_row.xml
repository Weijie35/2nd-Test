<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listItemRowCountLabel"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:text=""
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listItemTypeRowLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listItemRowLabel"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingTop="11dp"
        android:text="Apple"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/listItemTypeRowLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listItemTypeRowLabel"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:paddingTop="14dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/listItemRowCountLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/listItemRowLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@+id/listItemRowLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/listItemCheckBox"
            android:layout_width="33dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>